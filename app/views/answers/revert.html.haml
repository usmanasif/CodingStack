-content_for :subtabs do
  .navtitle
    = t(".title")

-form_for(:answer, :url => question_answer_path(@question, @answer), :html => {:method => :put, :class => "form"}) do |f|
  =render :partial => "form", :locals => {:f => f, :markdown => true}
  .field-group
    .buttons
      = f.submit t("scaffold.update")
      = t("global.or")
      = link_to t("scaffold.cancel"), history_question_answer_path(@question, @answer), :class => "button cancel"
